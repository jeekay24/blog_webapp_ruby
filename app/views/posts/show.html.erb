<!-- app/views/posts/show.html.erb -->
<div class="post-container">
  <nav class="breadcrumb">
    <%= link_to '‚Üê Back to All Posts', posts_path, class: 'breadcrumb-link' %>
  </nav>

  <article class="post-article">
    <header class="post-header">
      <h1 class="post-title"><%= @post.title %></h1>
      
      <div class="post-meta">
        <div class="meta-item">
          <i class="icon">üìÖ</i>
          <span>Published on <%= @post.created_at.strftime("%B %d, %Y at %I:%M %p") %></span>
        </div>
        
        <% if @post.created_at != @post.updated_at %>
          <div class="meta-item">
            <i class="icon">‚úèÔ∏è</i>
            <span>Last updated <%= @post.updated_at.strftime("%B %d, %Y at %I:%M %p") %></span>
          </div>
        <% end %>
      </div>
    </header>

    <div class="post-content">
      <%= simple_format(@post.content, class: 'post-body-text') %>
    </div>

    <footer class="post-footer">
      <div class="post-actions">
        <%= link_to edit_post_path(@post), class: 'btn btn-primary' do %>
          <i class="icon">‚úèÔ∏è</i>
          Edit Post
        <% end %>
        
        <%= form_with model: @post, method: :delete, class: 'inline-form', data: { turbo: false } do |form| %>
  <%= form.submit 'üóëÔ∏è Delete Post', 
                  class: 'btn btn-danger', 
                  data: { confirm: "Are you sure you want to delete '#{@post.title}'?\n\nThis action cannot be undone." } %>
<% end %>

        
        <%= link_to posts_path, class: 'btn btn-outline' do %>
          <i class="icon">üìã</i>
          View All Posts
        <% end %>
      </div>
    </footer>
  </article>
</div>

<style>
  .post-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
  }

  .breadcrumb {
    margin-bottom: 30px;
  }

  .breadcrumb-link {
    color: rgba(255,255,255,0.9);
    text-decoration: none;
    font-weight: 500;
    padding: 10px 20px;
    background: rgba(255,255,255,0.1);
    border-radius: 8px;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .breadcrumb-link:hover {
    background: rgba(255,255,255,0.2);
    transform: translateX(-5px);
  }

  .post-article {
    background: white;
    border-radius: 20px;
    padding: 40px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.2);
    backdrop-filter: blur(10px);
  }

  .post-header {
    border-bottom: 2px solid #f7fafc;
    padding-bottom: 30px;
    margin-bottom: 40px;
  }

  .post-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #2d3748;
    margin: 0 0 20px 0;
    line-height: 1.2;
  }

  .post-meta {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #666;
    font-size: 0.95rem;
  }

  .meta-item .icon {
    font-size: 1rem;
  }

  .post-content {
    margin-bottom: 40px;
  }

  .post-body-text {
    font-size: 1.1rem;
    line-height: 1.8;
    color: #4a5568;
    font-weight: 400;
  }

  .post-body-text p {
    margin-bottom: 20px;
  }

  .post-footer {
    border-top: 2px solid #f7fafc;
    padding-top: 30px;
  }

  .post-actions {
    display: flex;
    gap: 15px;
    flex-wrap: wrap;
    justify-content: center;
  }

  /* Button Styles */
  .btn {
    padding: 12px 24px;
    border-radius: 10px;
    text-decoration: none;
    font-weight: 600;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 1rem;
    display: inline-flex;
    align-items: center;
    gap: 8px;
  }

  .btn-primary {
    background: linear-gradient(135deg, #48bb78, #38a169);
    color: white;
    box-shadow: 0 4px 15px rgba(72, 187, 120, 0.4);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(72, 187, 120, 0.6);
  }

  .btn-danger {
    background: linear-gradient(135deg, #f56565, #e53e3e);
    color: white;
    box-shadow: 0 4px 15px rgba(245, 101, 101, 0.4);
  }

  .btn-danger:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(245, 101, 101, 0.6);
  }

  .btn-outline {
    background: transparent;
    color: #667eea;
    border: 2px solid #667eea;
  }

  .btn-outline:hover {
    background: #667eea;
    color: white;
    transform: translateY(-2px);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .post-container {
      padding: 15px;
    }
    
    .post-article {
      padding: 25px;
    }
    
    .post-title {
      font-size: 2rem;
    }
    
    .post-actions {
      flex-direction: column;
      align-items: stretch;
    }
    
    .btn {
      justify-content: center;
    }
  }

  /* Animation */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .post-article {
    animation: fadeInUp 0.6s ease forwards;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Enhanced delete button
    const deleteBtn = document.querySelector('.delete-btn');
    
    if (deleteBtn) {
      deleteBtn.addEventListener('click', function(e) {
        if (confirm(this.dataset.confirm)) {
          this.innerHTML = '<i class="icon">‚è≥</i> Deleting...';
          this.style.pointerEvents = 'none';
        } else {
          e.preventDefault();
        }
      });
    }

    // Reading progress indicator
    const article = document.querySelector('.post-article');
    const progressBar = document.createElement('div');
    progressBar.className = 'reading-progress';
    progressBar.innerHTML = '<div class="progress-bar"></div>';
    document.body.appendChild(progressBar);

    // Add CSS for progress bar
    const style = document.createElement('style');
    style.textContent = `
      .reading-progress {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: rgba(255,255,255,0.2);
        z-index: 1000;
      }
      
      .progress-bar {
        height: 100%;
        background: linear-gradient(90deg, #667eea, #764ba2);
        width: 0%;
        transition: width 0.3s ease;
      }
    `;
    document.head.appendChild(style);

    // Update progress on scroll
    window.addEventListener('scroll', function() {
      const winScroll = document.body.scrollTop || document.documentElement.scrollTop;
      const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
      const scrolled = (winScroll / height) * 100;
      
      document.querySelector('.progress-bar').style.width = scrolled + '%';
    });
  });
</script>